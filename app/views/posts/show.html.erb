<h1> <%= @post.title %> </h1>
<p>
  <%= @post.body %>
</p>

<!-- komentar -->
<br><br><br>
<h4>Komentar</h4>
<% if @post.comments.empty? %>
  <p><em> Belum ada komentar </em></p>
<% end %>

<%= form_tag destroy_multiple_post_comments_path(@post), method: :delete do %>

    <%= render @post.comments %>

  <p><%= submit_tag "Hapus komentar terpilih",
                    data: {
                      confirm: "Hapus komentar terpilih?" } %>
  </p>


<% end %>

<hr>

<h4>Tambahkan komentar:</h4>
<%= form_for([@post, @post.comments.build]) do |f| %>
  <p>
    <%= f.label :Nama %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :Komentar %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Depan', posts_path %>